extends layout

block content
  div.content
    div.products-header-container
      div.products-header STORE
      a.button.primary(href='/products/add') Add product
    div.table.container
      table
        thead
          th Product Name
          th Rating
          th Category
          th
        tbody
          each product in products
            tr
              td= product.product_name
              td= product.rating
              td= product.category
              td
                a(href=`/products/profile/${product.id}`) View Product